{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "env": {
    "MONGO_URL": "@mongo_url",
    "DB_NAME": "@db_name",
    "CORS_ORIGINS": "@cors_origins",
    "PUBLICATIONS_API_URL": "@publications_api_url",
    "PROJECTS_API_URL": "@projects_api_url", 
    "ACHIEVEMENTS_API_URL": "@achievements_api_url",
    "NEWS_EVENTS_API_URL": "@news_events_api_url"
  }
}